    <EmbeddedResource Include="tl_2024_us_state.dbf" />
    <EmbeddedResource Include="tl_2024_us_state.shx" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Syncfusion.WinForms.DataGrid">
      <HintPath>C:\Program Files (x86)\Syncfusion\Essential Studio\Windows\30.1.37\WindowsForms\Assemblies\Syncfusion.WinForms.DataGrid.dll</HintPath>
    </Reference>
    <Reference Include="Syncfusion.Windows.Forms.Tools">
      <HintPath>C:\Program Files (x86)\Syncfusion\Essential Studio\Windows\30.1.37\WindowsForms\Assemblies\Syncfusion.Windows.Forms.Tools.dll</HintPath>
    </Reference>
    <Reference Include="Syncfusion.WinForms.Buttons">
      <HintPath>C:\Program Files (x86)\Syncfusion\Essential Studio\Windows\30.1.37\WindowsForms\Assemblies\Syncfusion.WinForms.Buttons.dll</HintPath>
    </Reference>
    <!-- Add more as needed for other controls (e.g., Chart, Scheduler, etc.) -->
