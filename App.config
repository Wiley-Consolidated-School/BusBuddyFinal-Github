<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- Production SQL Server Express Database -->
    <add name="DefaultConnection"
         connectionString="Server=localhost\SQLEXPRESS;Database=BusBuddyDB;Trusted_Connection=True;TrustServerCertificate=True;"
         providerName="Microsoft.Data.SqlClient" />

    <!-- Test SQL Server Express Database -->
    <add name="TestConnection"
         connectionString="Server=localhost\SQLEXPRESS;Database=BusBuddyDB_Test;Trusted_Connection=True;TrustServerCertificate=True;"
         providerName="Microsoft.Data.SqlClient" />
  </connectionStrings>
  <appSettings>
    <add key="DatabaseProvider" value="SqlServer" />
    <add key="Environment" value="Production" />
  </appSettings>
</configuration>
