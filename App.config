<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <connectionStrings>
    <!-- Production SQL Server Express Database -->
    <add name="DefaultConnection"
         connectionString="Server=localhost\SQLEXPRESS;Database=BusBuddy;Trusted_Connection=True;TrustServerCertificate=True;Connection Timeout=30;Integrated Security=True;"
         providerName="Microsoft.Data.SqlClient" />

    <!-- Test SQL Server Express Database -->
    <add name="TestConnection"
         connectionString="Server=localhost\SQLEXPRESS;Database=BusBuddy_Test;Trusted_Connection=True;TrustServerCertificate=True;"
         providerName="Microsoft.Data.SqlClient" />

    <!-- SQLite connection for development (alternative, uncomment if needed) -->
    <!--
    <add name="SqliteConnection"
         connectionString="Data Source=busbuddy.db;"
         providerName="Microsoft.Data.Sqlite" />
    -->

    <!-- SQL Server Express example (alternative configuration) -->
    <!--
    <add name="AlternativeConnection"
         connectionString="Server=localhost\SQLEXPRESS;Database=BusBuddy;Trusted_Connection=True;TrustServerCertificate=True;"
         providerName="Microsoft.Data.SqlClient" />
    -->
  </connectionStrings>

  <appSettings>
    <!-- Environment Configuration -->
    <add key="Environment" value="Production" />
    <add key="DatabaseProvider" value="SqlServer" />

    <!-- Debugging Configuration - Optimized for Startup Performance -->
    <add key="DebugLevel" value="Standard" /> <!-- Minimal, Standard, Detailed, Verbose -->
    <add key="EnablePerformanceMetrics" value="true" />
    <add key="EnableMemoryTracking" value="false" /> <!-- Disabled for 30ms startup savings -->
    <add key="EnableDatabaseProfiling" value="false" />
    <add key="EnableUIInteractionLogging" value="false" />
    <add key="EnableSyncfusionMetrics" value="false" />
    <add key="PerformanceThresholdMs" value="200" /> <!-- Raised from 100ms to 200ms to reduce overhead -->
    <add key="MemoryThresholdMB" value="50" /> <!-- Alert on memory increase > 50MB -->
    <add key="LogRotationDays" value="7" /> <!-- Keep logs for 7 days -->
    <add key="EnableGranularTiming" value="false" /> <!-- Disabled for faster startup -->

    <!-- Syncfusion License is registered directly in Program.cs
         Do not create license manager classes or helpers -->
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
</configuration>

