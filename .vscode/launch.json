{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöå BusBuddy - Debug Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build BusBuddy",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/BusBuddy.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "justMyCode": true,
            "enableStepFiltering": true,
            "suppressJITOptimizations": true,
            "logging": {
                "exceptions": true,
                "moduleLoad": false,
                "programOutput": true
            },
            "windows": {
                "console": "integratedTerminal"
            }
        },
        {
            "name": "üîç BusBuddy - Enhanced Debug (Null Ref Detection)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build BusBuddy",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/BusBuddy.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "justMyCode": false,
            "enableStepFiltering": false,
            "suppressJITOptimizations": true,
            "requireExactSource": false,
            "logging": {
                "exceptions": true,
                "moduleLoad": true,
                "programOutput": true,
                "diagnosticsLog": {
                    "protocolMessages": true
                },
                "trace": true,
                "traceResponse": true
            },
            "env": {
                "DOTNET_ENVIRONMENT": "Development",
                "BUSBUDDY_DEBUG": "true",
                "BUSBUDDY_VERBOSE_LOGGING": "true",
                "DOTNET_EnableDiagnostics": "1"
            },
            "windows": {
                "console": "integratedTerminal"
            }
        },
        {
            "name": "üß™ BusBuddy Tests - Debug",
