            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "justMyCode": true,
            "windows": {
                "console": "integratedTerminal"
            }
        },
        {
            "name": "üî¨ CostAnalyticsValidator - Detailed Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build BusBuddy",
            "program": "dotnet",
            "args": ["run", "--project", "${workspaceFolder}", "--", "validate-analytics"],
