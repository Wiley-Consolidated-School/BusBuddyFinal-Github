{
  // YAML configuration to reduce false errors
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  "yaml.format.proseWrap": "preserve",
  "yaml.format.printWidth": 80,

  // GitHub Actions schema validation
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ],
    "https://json.schemastore.org/dependabot-v2.json": [
      ".github/dependabot.yml",
      ".github/dependabot.yaml"
    ],
    "https://json.schemastore.org/codecov.json": [
      "codecov.yml",
      ".codecov.yml"
    ]
  },

  // Disable problematic linting for certain file patterns
  "yaml.customTags": [
    "!And",
    "!Base64",
    "!Cidr",
    "!Equals",
    "!GetAZs",
    "!GetAtt",
    "!If",
    "!ImportValue",
    "!Join",
    "!Not",
    "!Or",
    "!Ref",
    "!Select",
    "!Split",
    "!Sub"
  ],

  // File associations
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml": "yaml",
    "*.cobertura.xml": "xml",
    "lcov.info": "plaintext"
  },

  // Problem matcher configuration to reduce noise
  "problems.decorations.enabled": true,
  "problems.sortOrder": "severity",

  // Exclude certain YAML validation for build artifacts
  "yaml.completion": true,
  "yaml.hover": true,
  "yaml.maxItemsComputed": 5000,

  // Editor settings for YAML files
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },

  // Editor settings for C# files
  "[csharp]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },

  // Coverage Gutters Configuration
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "coverage.info",
    "coverage.lcov",
    "**/TestResults/**/coverage.cobertura.xml",
    "**/coverage.opencover.xml"
  ],
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showBranchCoverage": true,
  "coverage-gutters.showGutterCoverage": true,
  "coverage-gutters.coverageReportFileName": "lcov.info",
  "coverage-gutters.showStatusBarToggler": true,
  "coverage-gutters.xmlname": "coverage.cobertura.xml",
  "coverage-gutters.lcovname": "lcov.info",
  "coverage-gutters.searchCriteria": "**/TestResults/**/coverage.cobertura.xml",
  "coverage-gutters.displayFormatters": [
    "lcov",
    "cobertura"
  ],

  // .NET Test Configuration
  "dotnet-test-explorer.testProjectPath": "**/*Tests.csproj",
  "dotnet-test-explorer.useTreeView": true,
  "dotnet-test-explorer.autoWatch": true,
  "dotnet-test-explorer.addProblems": true,
  "dotnet-test-explorer.enableTelemetry": false,
  "dotnet-test-explorer.autoExpandTree": true,
  "dotnet-test-explorer.showCodeLens": true,
  "dotnet-test-explorer.codeLensFailed": "❌",
  "dotnet-test-explorer.codeLensPassed": "✅",
  "dotnet-test-explorer.codeLensSkipped": "⚠️",
  "dotnet-test-explorer.testArguments": "--settings=./BusBuddy.Tests/test.runsettings",
  "dotnet-test-explorer.treeMode": "flat",

  // .NET/C# Configuration
  "dotnet.defaultSolution": "BusBuddy.sln",
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.organizeImportsOnFormat": true,
  "csharp.semanticHighlighting.enabled": true,
  "csharp.format.enable": true,
  "omnisharp.projectLoadTimeout": 60,
  "omnisharp.maxProjectResults": 250,

  // VS Code Native Testing
  "dotnet.unitTests.runSettingsPath": "./BusBuddy.Tests/test.runsettings",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "dotnet.unitTests.discoverCommandLine": "dotnet test --list-tests",

  // Test Discovery
  "testExplorer.mergeSuites": false,
  "testExplorer.showCollapseButton": true,
  "testExplorer.showExpandButton": 3,
  "testExplorer.gutterDecoration": true,
  "testExplorer.useNativeTesting": true,
  "testExplorer.sort": "byLocation",
  "dotnet.test.autoDiscoverTests": true,
  "dotnet.codeLens.enableReferencesCodeLens": true,
  "dotnet.inlayHints.enableInlayHintsForTypes": true,
  "dotnet.inlayHints.enableInlayHintsForParameters": true,

  // Auto-save for coverage updates
  "files.autoSave": "onFocusChange",

  // Terminal settings for dotnet commands
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // GitHub Copilot Chat prompt files
  "github.copilot.chat.promptFiles": [
    "./CODE_REFINEMENT_PROMPT.md",
    "./TESTING_GUIDELINES.md",
    "./TEST_GENERATION_PROMPT.md",
    "./copilot-examples.md"
  ],
  "github.copilot.chat.useProjectContext": true,

  // Copilot test generation configuration
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.testGenerationStrategy": "xunit",
  "github.copilot.advanced": {
    "importOnReference.include": ["Xunit", "BusBuddy.UI.Tests"],
    "importOnReference.exclude": ["MSTest", "NUnit", "SimpleTest"]
  },

  // GitHub Copilot file exclusions for memory optimization
  "github.copilot.excludedFiles": [
    "**/form_cache.json",
    "**/node_modules/**",
    "**/bin/**",
    "**/obj/**",
    "**/TestResults/**",
    "**/*.dll",
    "**/*.exe",
    "**/*.tmp",
    "**/*.backup*",
    "**/*_backup*"
  ],

  // Enhanced file exclusions
  "files.exclude": {
    "**/form_cache.json": true,
    "**/node_modules": true,
    "**/bin": true,
    "**/obj": true,
    "**/TestResults": true,
    "**/*.dll": true,
    "**/*.exe": true,
    "**/*.tmp": true,
    "**/*.backup*": true,
    "**/*_backup*": true
  },

  "search.exclude": {
    "**/form_cache.json": true,
    "**/node_modules": true,
    "**/bin": true,
    "**/obj": true,
    "**/TestResults": true
  },

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/bin/**": true,
    "**/obj/**": true,
    "**/TestResults/**": true
  },

  "cSpell.words": [
    "addrolemember",
    "Argb",
    "buildtransitive",
    "contentfiles",
    "Finalizers",
    "LASTEXITCODE",
    "msbuild",
    "pwsh",
    "Segoe",
    "Syncfusion",
    "Tahoma",
    "Xunit"
  ],

  "github.copilot.renameSuggestions.triggerAutomatically": false,
  "github.copilot.nextEditSuggestions.fixes": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,

  // Enhanced debugging settings for novice-friendly debugging
  "omnisharp.enableDecompilationSupport": true,
  "debug.console.acceptSuggestionOnEnter": "on",
  "debug.console.closeOnEnd": false,
  "debug.console.collapseIdenticalLines": false,
  "debug.console.fontSize": 12,
  "debug.console.historySize": 200,
  "debug.onTaskErrors": "debugAnyway",
  "debug.openDebug": "openOnDebugBreak",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.showInlineBreakpointCandidates": true,
  "debug.toolBarLocation": "floating"
}
