<?xml version="1.0" encoding="utf-8"?>
<RuleSet Name="BusBuddy Testing Rules" Description="Enforces GitHub Copilot best practices for unit testing" ToolsVersion="16.0">
  <Rules AnalyzerId="Microsoft.CodeAnalysis.CSharp" RuleNamespace="Microsoft.CodeAnalysis.CSharp">
    <!-- Test Method Naming -->
    <Rule Id="IDE1006" Action="Warning" />    <!-- Naming rule violations (relaxed for tests) -->
    <Rule Id="CA1707" Action="Hidden" />      <!-- Identifiers should not contain underscores (disabled for tests) -->

    <!-- Test Organization -->
    <Rule Id="CA1001" Action="Error" />       <!-- Types that own disposable fields should be disposable -->
    <Rule Id="CA2000" Action="Warning" />     <!-- Dispose objects before losing scope -->

    <!-- Test Documentation -->
    <Rule Id="CS1591" Action="Hidden" />      <!-- Missing XML comment (disabled for tests) -->
  </Rules>
</RuleSet>
